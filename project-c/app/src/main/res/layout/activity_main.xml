<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/poster_background">
            <ImageView
                android:id="@+id/posterImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:src="@drawable/image11"/>
            <TextView
                android:id="@+id/movieNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="@string/movie_name"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/posterImageView"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_15"
                android:layout_marginTop="58dp"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@id/movieNameTextView"/>
            <TextView
                android:id="@+id/movieDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="2014.07.23 개봉\n액션 / 137분"
                android:textSize="19sp"
                android:textColor="@color/white"
                android:layout_toRightOf="@id/posterImageView"
                android:layout_below="@id/movieNameTextView" />
            <ImageView
                android:id="@+id/thumbUpImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_thumb_up"
                android:scaleType="fitXY"
                android:layout_toRightOf="@id/posterImageView"
                android:layout_below="@id/movieDateTextView"/>
            <TextView
                android:id="@+id/thumbUpTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/thumbUpImageView"
                android:layout_below="@id/movieDateTextView" />
            <ImageView
                android:id="@+id/thumbDownImageView"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/ic_thumb_down"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/thumbUpTextView"
                android:layout_below="@id/movieDateTextView"/>
            <TextView
                android:id="@+id/thumbDownTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/thumbDownImageView"
                android:layout_below="@id/movieDateTextView" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@id/relativeLayout1"
            android:layout_alignParentRight="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="2dp"
                    android:gravity="center"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="예매율"
                        android:textSize="18sp"
                        android:layout_marginBottom="4dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5위 1.8%"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginEnd="2dp"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="평점"
                        android:textSize="18sp"
                        android:layout_marginBottom="4dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:numStars="5"
                            android:rating="4.5"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="8.2"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="누적관객수"
                        android:textSize="18sp"
                        android:layout_marginBottom="4dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="839,399명"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/white"
            android:layout_marginTop="15dp"
            android:layout_below="@id/relativeLayout2">
            <TextView
                android:id="@+id/movieContentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="줄거리"
                android:textStyle="bold"
                android:textSize="23sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/movie_content"
                android:textSize="18sp"
                android:lineSpacingExtra="3dp"
                android:layout_below="@+id/movieContentTextView"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:layout_below="@id/relativeLayout3">
            <TextView
                android:id="@+id/movieManTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="감독/출연"
                android:textStyle="bold"
                android:textSize="23sp"/>
            <TextView
                android:id="@+id/movieDirectorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="감독"
                android:textSize="19sp"
                android:textStyle="bold"
                android:layout_marginBottom="7dp"
                android:lineSpacingExtra="3dp"
                android:layout_below="@+id/movieManTextView"/>
            <TextView
                android:id="@+id/movieManTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="윤종빈"
                android:textSize="19sp"
                android:layout_marginLeft="13dp"
                android:layout_marginBottom="7dp"
                android:layout_toRightOf="@id/movieDirectorTextView"
                android:layout_below="@id/movieManTextView"/>
            <TextView
                android:id="@+id/movieActorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="출연"
                android:textSize="19sp"
                android:textStyle="bold"
                android:lineSpacingExtra="3dp"
                android:layout_below="@+id/movieDirectorTextView"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movie_actor"
                android:textSize="19sp"
                android:layout_marginLeft="13dp"
                android:layout_toRightOf="@id/movieActorTextView"
                android:layout_below="@id/movieManTextView2"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:layout_below="@id/relativeLayout4">
            <TextView
                android:id="@+id/movieCommentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="한줄평"
                android:textStyle="bold"
                android:textSize="23sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_review_selected"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/writeTextView"/>
            <TextView
                android:id="@+id/writeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="작성하기"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ff561d"
                android:layout_alignParentEnd="true"/>
            <ListView
                android:id="@+id/reviewListView"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:scrollbars="none"
                android:layout_below="@+id/movieCommentTextView"/>
            <Button
                android:id="@+id/readButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="모두 보기"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#510266"
                android:background="@drawable/btn_background"
                android:layout_marginTop="20dp"
                android:layout_below="@id/reviewListView"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/white"
            android:layout_below="@id/relativeLayout5">
            <ImageView
                android:id="@+id/facebookImageView"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_facebook"
                android:layout_marginLeft="10dp" />
            <ImageView
                android:id="@+id/kakaoImageView"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_kakao"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/facebookImageView"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="예매하기"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="#ff561d"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/kakaoImageView"/>
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>